<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="org.apache.cordova.toast"
        version="2.0.2">

  <name>Toast</name>

  <description>
    This plugin allows you to show a Toast.
    A Toast is a little non intrusive buttonless popup which automatically disappears.
  </description>

  <license>MIT</license>

  <engines>
    <engine name="cordova" version=">=3.0.0"/>
  </engines>

  <js-module src="www/Toast.js" name="Toast">
    <clobbers target="window.Toast" />
  </js-module>

  <!-- android -->
  <platform name="android">

    <config-file target="config.xml" parent="/*">
      <feature name="Toast">
        <param name="android-package" value="org.apache.cordova.toast.Toast" />
      </feature>
    </config-file>
    <source-file src="src/Toast.java" target-dir="src/org/apache/cordova/toast"/>
  </platform>

</plugin>
